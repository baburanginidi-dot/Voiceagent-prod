{
  "name": "voiceagent-prod",
  "private": true,
  "version": "1.0.0",
  "description": "Full-stack voice agent with thin client and Node server",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -k -n server,client \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm --prefix server run build",
    "build:client": "npm --prefix client run build",
    "test": "npm run test:server && npm run test:client",
    "test:server": "npm --prefix server run test",
    "test:client": "npm --prefix client run test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "npm --prefix server run lint",
    "lint:client": "npm --prefix client run lint",
    "db:push": "drizzle-kit push",
    "docker": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ws": "^8.18.3"
  }
}
